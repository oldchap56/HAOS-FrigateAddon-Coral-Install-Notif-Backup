alias: Notification  Intrusion par Telegram
description: Envoie message, photo et vidéo à la détection d'un humain par Frigate
trigger:
  - platform: mqtt
    topic: frigate/events
    payload: new
    value_template: "{{ value_json.type }}"
condition: []
action:
  - service: telegram_bot.send_message
    metadata: {}
    data:
      message: Alerte INTRUSION
      parse_mode: html
  - service: telegram_bot.send_photo
    data:
      authentication: digest
      url: >-
        https://oldchap56.duckdns.org/api/frigate/notifications/{{trigger.payload_json["after"]["id"]}}/thumbnail.jpg
      username: "!secret login"
      password: "!secret mdp"
      tag: "{{trigger.payload_json[\"after\"][\"id\"]}}"
      when: "{{trigger.payload_json[\"after\"][\"start_time\"]|int}}"
      entity_id: |-
        camera.{{trigger.payload_json["after"]["camera"] | replace("-","_") |
          lower}}
  - delay:
      hours: 0
      minutes: 0
      seconds: 45
      milliseconds: 0
  - service: telegram_bot.send_video
    data:
      authentication: digest
      url: >-
        https://oldchap56.duckdns.org/api/frigate/notifications/{{trigger.payload_json["after"]["id"]}}/{{trigger.payload_json["after"]["camera"]}}/clip.mp4
      username: "!secret login"
      password: "!secret mdp"
